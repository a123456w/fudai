<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="35dp"
    android:paddingLeft="45dp"
    android:paddingRight="45dp"
    android:paddingTop="35dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/layouthight"
        android:gravity="center_vertical"
        android:text="输入支付密码"
        android:textSize="15sp" />

    <com.qlzx.mylibrary.widget.PasswordInputView
        android:id="@+id/pass_pwd"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:cursorVisible="false"
        android:inputType="number"
        android:maxLength="6"
        app:pivBorderColor="#cccccc"
        app:pivBorderRadius="10dp"
        app:pivBorderWidth="10dp"
        app:pivPasswordColor="#cccccc"
        app:pivPasswordLength="6"
        app:pivPasswordWidth="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/layouthight"
        android:gravity="center_vertical"
        android:text="确认支付密码"
        android:textSize="15sp" />

    <com.qlzx.mylibrary.widget.PasswordInputView
        android:id="@+id/pass_surepwd"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:cursorVisible="false"
        android:inputType="number"
        android:maxLength="6"
        app:pivBorderColor="#cccccc"
        app:pivBorderRadius="10dp"
        app:pivBorderWidth="10dp"
        app:pivPasswordColor="#cccccc"
        app:pivPasswordLength="6"
        app:pivPasswordWidth="10dp" />

    <TextView
        android:id="@+id/tv_wrongpwd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="支付密码不一致"
        android:textColor="@color/colorAccent"
        android:textSize="15sp"
        android:visibility="gone" />

    <!--<TextView-->
        <!--android:id="@+id/tv_commit"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="40dp"-->
        <!--android:layout_marginBottom="50dp"-->
        <!--android:layout_marginTop="90dp"-->
        <!--android:background="@drawable/round_cap_gray2"-->
        <!--android:gravity="center"-->
        <!--android:text="提交"-->
        <!--android:textColor="#fff"-->
        <!--android:textSize="18sp" />-->
    <TextView
        android:id="@+id/tv_commit"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/round_cap_gray2"
        android:gravity="center"
        android:text="提交"
        android:textColor="@color/white"
        android:textSize="16sp" />

</LinearLayout><!--
