<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/division_color"
    tools:context="com.ruirong.chefang.activity.SpecialPrefectureActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:background="@color/white"
        android:orientation="horizontal">


        <TextView
            style="@style/color3_size15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:text="输入金额"

            />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:text="￥"
            android:textSize="25sp"
            android:textColor="@color/text_color3"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_centerVertical="true"
            android:numeric="integer"
            android:background="@color/white"
            android:layout_marginLeft="@dimen/dp10"
            android:textColorHint="#999999" />
    </LinearLayout>

    <View
        android:layout_marginLeft="15dp"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/gray" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            style="@style/color9_size14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:text="可用余额"
            />
        <TextView
            style="@style/colore75252_size12"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="75dp"
            android:text="0.57"
        />

    </RelativeLayout>

    <ListView
        android:id="@+id/lv_payment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></ListView>
    <TextView

        android:id="@+id/tv_submit"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/enture_pay_money_bg"
        android:gravity="center"
        android:text="确认预订"
        android:textColor="@color/white"
        android:textSize="16sp" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/enture_every_bean_bg"
        android:gravity="center"
        android:text="充值"
        android:textColor="#dd0f1b"
        android:textSize="16sp" />
</LinearLayout>
