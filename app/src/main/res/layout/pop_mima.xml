<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="270dp"
        android:layout_height="140dp"
        android:layout_gravity="center"
        android:background="@drawable/bg_specialty"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">


            <TextView
                android:id="@+id/queren"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="请输入密码"
                android:textColor="@color/red"
                android:textSize="18dp" />

            <ImageView
                android:id="@+id/del_pic"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:layout_margin="2dp"
                android:padding="2dp"
                android:src="@drawable/close_icon11" />


        </RelativeLayout>


        <com.ruirong.chefang.widget.PasswordInputView
            android:id="@+id/pass_pwd"
            android:layout_width="220dp"
            android:layout_height="46dp"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:cursorVisible="false"
            android:inputType="number"
            android:maxLength="6"
            app:pivBorderColor="#cccccc"
            app:pivBorderRadius="10dp"
            app:pivBorderWidth="10dp"
            app:pivPasswordColor="#cccccc"
            app:pivPasswordLength="6"
            app:pivPasswordWidth="10dp" />


    </LinearLayout>

</LinearLayout>