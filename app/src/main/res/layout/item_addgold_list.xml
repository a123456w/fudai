<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="250dp"
    android:background="@color/white"
    android:padding="17dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="190dp"
        android:background="@drawable/shape_stroke_grey">
       <TextView
           android:id="@+id/tv_dayprofit"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           tools:text="0.01%"
           android:layout_marginTop="17dp"
           android:layout_marginLeft="58dp"
           android:textColor="@color/red"/>
        <TextView
            android:id="@+id/profit"
            android:layout_width="wrap_content"
            android:layout_marginLeft="58dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_dayprofit"
            android:text="每日增长率"/>
        <TextView
            android:id="@+id/tv_yearprofit"
            android:layout_width="wrap_content"
            android:layout_marginLeft="58dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/profit"
            android:textColor="@color/red"
            android:text="3.65%"/>
        <TextView
            android:layout_below="@+id/tv_yearprofit"
            android:layout_width="wrap_content"
            android:layout_marginLeft="58dp"
            android:layout_height="wrap_content"
            android:text="年增长率"/>
        <TextView
            android:id="@+id/tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="30天"
            android:textSize="30dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="36dp"
            android:layout_marginRight="35dp"
            />
        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="种植期"
            android:textSize="18sp"
            android:layout_below="@+id/tv_date"
            android:layout_alignParentRight="true"
            android:layout_marginRight="35dp"/>
        <View
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/date"
            android:layout_marginTop="26dp"
            android:background="@color/line_color"/>
        <TextView
            android:id="@+id/tv_explain"
            android:layout_below="@+id/line"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="增长的金豆每天到您金豆账户"/>

    </RelativeLayout>
    <TextView
        android:id="@+id/tv_addprofit"
        android:layout_below="@+id/add"
        android:layout_marginTop="170dp"
        android:layout_width="match_parent"
        android:layout_marginLeft="70dp"
        android:layout_marginRight="70dp"
        android:layout_height="40dp"
        android:background="@drawable/round_corner_red"
        android:text="我要种金豆"
        android:textSize="18sp"
        android:textColor="#fff"
        android:gravity="center"/>

</FrameLayout>