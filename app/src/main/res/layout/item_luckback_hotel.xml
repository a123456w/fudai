<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="7dp"
        android:background="#f6f6f6"></View>

    <ImageView
        android:id="@+id/fuback_pic"
        android:layout_width="match_parent"
        android:layout_height="195dp"
        android:layout_margin="@dimen/textmarginleft"
        android:scaleType="centerCrop" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp">

        <TextView
            android:id="@+id/fuback_name"
            style="@style/color3_size15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="" />

        <TextView
            android:id="@+id/fuback_distance"
            style="@style/color9_size12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="3dp"
            android:layout_toRightOf="@id/fuback_name"
            android:ellipsize="end"
            android:maxLines="2"
            android:singleLine="true"
            tools:text="" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/fuback_score"
                style="@style/colorfe9d00_size12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                tools:text="" />

            <TextView
                android:id="@+id/fuback_evaluate"
                style="@style/color9_size12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="7dp"
                tools:text="" />
        </LinearLayout>


        <TextView
            android:id="@+id/fuback_price"
            style="@style/colore75252_size17"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="12dp"
            android:layout_marginTop="26dp"
            tools:text="" />

    </RelativeLayout>

    <!--<View-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="7dp"-->
    <!--android:background="#f6f6f6"></View>-->
</LinearLayout>