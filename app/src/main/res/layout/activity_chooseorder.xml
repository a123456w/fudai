<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_outdiningroom"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="12dp"
        android:layout_weight="1"
        android:background="@drawable/ic_orderout">

        <Button
            android:id="@+id/btn_outdiningroom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@drawable/ic_btnorder"
            android:gravity="center"
            android:textColor="@color/red"
            android:textSize="18sp"
            android:text="店外预订点餐"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_indiningroom"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="12dp"
        android:layout_weight="1"
        android:background="@drawable/ic_orderin">

        <Button
            android:id="@+id/btn_indiningroom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:background="@drawable/ic_btnorder"
            android:textColor="@color/red"
            android:textSize="18sp"
            android:text="店内点餐"
            />

    </RelativeLayout>
</LinearLayout>