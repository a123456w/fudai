<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="#F6F6F6" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/spacing_normal" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="16dp"
                    android:gravity="center"
                    android:text="豆捞坊"
                    android:textColor="@color/text_color3"
                    android:textSize="@dimen/textSize15" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="107dp"
                    android:layout_height="80dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="15dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:orientation="vertical">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="23dp"
                            android:text="6人餐"
                            android:textColor="@color/text_color3"
                            android:textSize="@dimen/textSize15" />
                        <TextView
                            android:id="@+id/tv_money1"
                            android:layout_alignParentRight="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/common_margin_15"
                            android:text="￥298  "
                            android:layout_marginTop="25dp"
                            android:textColor="#ff666666"
                            android:textSize="10sp" />

                    </RelativeLayout>


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="11dp"
                            android:text="周一至周日"
                            android:textColor="@color/text_color6"
                            android:textSize="@dimen/textSize12" />

                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="@color/gray" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="11dp"
                            android:text="免预约"
                            android:textColor="@color/text_color6"
                            android:textSize="@dimen/textSize12" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableLeft="@drawable/image_tuis"
                            android:drawablePadding="3dp"
                            android:text="支持随时退款"
                            android:textColor="#90C42F"
                            android:textSize="@dimen/textSize12" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:drawableLeft="@drawable/image_duis"
                            android:drawablePadding="3dp"
                            android:text="支持过期自动退"
                            android:textColor="#90C42F"
                            android:textSize="@dimen/textSize12" />
                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="15dp"
                android:background="@color/gray" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="15dp"
                    android:text="数量"
                    android:textColor="@color/text_color3"
                    android:textSize="@dimen/textSize15" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    android:orientation="horizontal">


                    <ImageView
                        android:id="@+id/iv_subtract"
                        android:layout_width="19dp"
                        android:layout_height="19dp"
                        android:src="@drawable/reduce" />

                    <TextView
                        android:id="@+id/tv_count"
                        android:layout_width="29dp"
                        android:layout_height="19dp"
                        android:background="@drawable/border_gray_2"
                        android:gravity="center"
                        android:text="1"
                        android:textColor="@color/text_color" />

                    <ImageView
                        android:id="@+id/iv_add"
                        android:layout_width="19dp"
                        android:layout_height="19dp"
                        android:src="@drawable/add" />
                </LinearLayout>


            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="15dp"
                android:background="@color/gray" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="45dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/common_margin_15"
                    android:layout_marginTop="@dimen/common_margin_15"
                    android:text="小计"
                    android:textColor="@color/text_color3"
                    android:textSize="@dimen/textSize15" />

                <TextView
                    android:id="@+id/tv_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/common_margin_16"
                    android:text="￥298  "
                    android:textColor="#ffe75252"
                    android:textSize="@dimen/text_size_10" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="15dp"
                android:background="@color/gray" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:text="备注："
                android:textColor="@color/text_color3"
                android:textSize="@dimen/textSize15" />

            <EditText
                android:id="@+id/et_remark"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/bg_remarks" />

            <View
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:background="@color/gray" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/common_margin_15"
                    android:layout_marginLeft="@dimen/common_margin_16"
                    android:layout_marginTop="@dimen/common_margin_15"
                    android:drawableLeft="@drawable/ic_huiyuans"
                    android:drawablePadding="@dimen/common_margin_8"
                    android:gravity="center"
                    android:text="免登录直接购买"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_15" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="@dimen/common_margin_15"
                    android:background="@color/gray" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="44dp">

                <EditText
                    android:id="@+id/et_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="12dp"
                    android:background="@null"
                    android:hint="请输入您的姓名"
                    android:textColorHint="@color/line_grey" />


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="@dimen/common_margin_15"
                android:background="@color/gray" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:orientation="vertical">

                <com.qlzx.mylibrary.widget.EditTextClearAble
                    android:id="@+id/et_verification_code"
                    android:layout_width="match_parent"
                    android:layout_toLeftOf="@+id/tv_verification_code"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/common_margin_15"
                    android:background="@null"
                    android:drawableRight="@drawable/ic_delete_red"
                    android:gravity="start|center_vertical"
                    android:hint="请输入验证码"
                    android:imeOptions="actionNext"
                    android:inputType="number"
                    android:maxLength="6"
                    android:singleLine="true"
                    android:textColor="@color/text_color"
                    android:textColorHint="@color/line_grey"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/tv_verification_code"
                    android:layout_width="80dp"
                    android:layout_height="31dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginBottom="7dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="7dp"
                    android:background="@drawable/round_corner_gray"
                    android:gravity="center"
                    android:text="获取验证码"
                    android:textColor="@color/white"
                    android:textSize="14sp" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:background="@color/gray"
                android:layout_height="75dp">

                <TextView
                    android:id="@+id/tv_submit"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_margin="@dimen/common_margin_15"
                    android:background="@drawable/enture_pay_money_bg"
                    android:gravity="center"
                    android:text="提交订单"
                    android:textColor="@color/white"
                    android:textSize="18sp" />
            </LinearLayout>


        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</LinearLayout>