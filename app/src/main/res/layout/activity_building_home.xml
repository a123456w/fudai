<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/layout_bg">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.youth.banner.Banner
                android:id="@+id/banner_top"
                android:layout_width="match_parent"
                android:layout_height="210dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_real_estate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/textmarginleft"
                    android:layout_marginTop="15dp"
                    android:text="建材家居"
                    android:textColor="@color/text_color3"
                    android:textSize="@dimen/font_normal" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="16dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <RatingBar
                    android:id="@+id/rb_grade"
                    style="@android:style/Widget.RatingBar"
                    android:layout_width="wrap_content"
                    android:layout_height="13dp"
                    android:layout_marginLeft="@dimen/textmarginleft"
                    android:layout_marginTop="1dp"
                    android:isIndicator="true"
                    android:numStars="5"
                    android:progressDrawable="@drawable/ratingbar_drawable"
                    android:stepSize="0.1" />

                <TextView
                    android:id="@+id/tv_grade"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"

                    android:text="5分"
                    android:textColor="@color/red" />


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/margin"
                android:background="@color/gray" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="61dp">

                <ImageView
                    android:id="@+id/tv_position"
                    android:layout_width="15dp"
                    android:layout_height="20dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/margin"
                    android:src="@drawable/locationsss" />

                <ImageView
                    android:id="@+id/iv_phone"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/margin"
                    android:src="@drawable/image_phone" />

                <TextView
                    android:id="@+id/tv_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="39dp"
                    android:layout_marginRight="20dp"
                    android:layout_toLeftOf="@id/iv_phone"
                    android:text="北京市昌平区政府西路188号（西关三角地，政府与城西角交叉口）距离您步行952米"
                    android:textColor="@color/text_color6"
                    android:textSize="13sp" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="25dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="48dp"
                    android:background="@color/gray" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="7dp"
                android:layout_alignParentBottom="true"
                android:background="#eeeeee" />




            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                <!--    <TextView
                        android:layout_width="2dp"
                        android:layout_height="15dp"
                        android:layout_marginLeft="@dimen/textmarginleft"
                        android:layout_marginTop="13dp"
                        android:background="#dd0f1b" />-->

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="13dp"
                        android:text="商家详情"
                        android:textColor="@color/text_color3"
                        android:textSize="@dimen/font_normal" />
                </LinearLayout>

                <TextView
                    android:layout_marginBottom="15dp"
                    android:id="@+id/tv_company_profile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin"
                    android:layout_marginRight="@dimen/margin"
                    android:layout_marginTop="18dp"
                    android:text="       北京齐力众信科技有限公司，始创于2006年4月。坚持、专注、深耕于互联网平台搭建的外包行业，拥有科技园区独栋办公楼，过百人技术研发团队，服务过众多国家级政府项目，世界五百强企业项目，上万家客户，十年客户满意度100%。"
                    android:textColor="@color/text_color6"
                    android:textSize="13sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="7dp"
                    android:background="@color/gray" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginBottom="15dp"
                    android:layout_marginLeft="@dimen/textmarginleft"
                    android:gravity="center"
                    android:text="用户评价（1588）"
                    android:textColor="@color/text_color3"
                    android:textSize="@dimen/font_normal" />

                <com.qlzx.mylibrary.widget.CircleBar
                    android:id="@+id/cb_evaluate"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_gravity="center"></com.qlzx.mylibrary.widget.CircleBar>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="15dp"
                    android:background="@color/gray" />


            </LinearLayout>

            <com.qlzx.mylibrary.widget.NoScrollListView
                android:id="@+id/nslv_shopmall_comment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></com.qlzx.mylibrary.widget.NoScrollListView>
            <View
                android:layout_width="match_parent"
                android:layout_height="100dp" />

        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

    <include layout="@layout/layout_trade" />
</FrameLayout>