<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/division_color"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@color/white"
            android:orientation="horizontal">

            <TextView
                style="@style/color3_size15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:gravity="center_vertical"
                android:text="对方账号:" />

            <EditText
                android:id="@+id/et_oppositename"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:background="@null"
                android:gravity="center_vertical"
                android:hint="请输入对方手机号或邮箱" />
        </LinearLayout>

        <View

            android:layout_width="match_parent"
            android:layout_height="0.2dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:background="@color/black" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="11dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_pic"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:layout_marginLeft="@dimen/textmarginleft"
                android:layout_marginTop="2dp"
                android:scaleType="centerCrop"
                android:src="@drawable/notice_icon" />

            <TextView
                style="@style/color9_size13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:layout_marginLeft="8dp"
                android:text="将余额实时转入对方账户，无法退回" />

        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/btn_suretransfers"
        android:layout_width="match_parent"
        android:layout_height="@dimen/layouthight"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/selector_btn"
        android:text="下一步"
        android:textColor="@color/white" />

</LinearLayout>