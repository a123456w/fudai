<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginRight="10dp"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/lls"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/iv_pic"
            android:layout_width="83dp"
            android:layout_height="83dp"
            android:layout_margin="5dp"
            android:scaleType="center"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="83dp"
            android:layout_marginTop="6dp"
            android:orientation="horizontal"
            android:weightSum="7">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="5"
                android:layout_height="match_parent"
                android:layout_toLeftOf="@+id/ll1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:gravity="left"
                    tools:text="总统套房总统套房总统套房总统套房总统套房总统"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:textColor="@color/black"
                    android:textSize="13sp"
                    />

                <TextView
                    android:id="@+id/condition_1"
                    style="@style/color6_size14"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    tools:text="总统套房"
                    android:textSize="11sp"
                    android:gravity="center_vertical"
                    android:singleLine="true"
                    android:ellipsize="end"/>

                <TextView
                    android:id="@+id/condition_2"
                    style="@style/color6_size14"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    tools:text="总统套房"
                    android:textSize="11sp"
                    android:gravity="center_vertical"
                    android:singleLine="true"
                    android:ellipsize="end"/>

                <TextView
                    android:id="@+id/tv_evaluate"
                    style="@style/color6_size14"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:textSize="11sp"
                    tools:text="总统套房"
                    android:singleLine="true"
                    android:ellipsize="end"
                    />


            </LinearLayout>


            <RelativeLayout
                android:id="@+id/rl_reserve"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                >

                <TextView
                    android:id="@+id/tv_presentprice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="￥313"
                    android:layout_marginBottom="5dp"
                    android:textColor="@color/red"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_oldprice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/tv_presentprice"
                    android:layout_marginBottom="5dp"
                    android:textSize="11sp"
                    android:text="￥583" />

                <ImageView
                    android:id="@+id/iv_orderonline"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/tv_oldprice"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_orderonline" />
            </RelativeLayout>

        </LinearLayout>


    </LinearLayout>


</LinearLayout>