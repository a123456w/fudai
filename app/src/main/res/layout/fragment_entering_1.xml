<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/margin"
        android:paddingRight="@dimen/margin"
        android:gravity="center_horizontal">

        <EditText
            android:id="@+id/et_shop_name"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请输入店铺名称"
            android:textColorHint="@color/hint_color"
            android:textSize="14sp"
            android:textColor="@color/hint_color"
            android:background="@null"/>

        <include layout="@layout/line"/>

        <EditText
            android:id="@+id/et_shop_location"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请输入店铺地址"
            android:textColorHint="@color/hint_color"
            android:textSize="14sp"
            android:textColor="@color/hint_color"
            android:background="@null"/>

        <include layout="@layout/line"/>

        <TextView
            android:id="@+id/tv_shop_category"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="选择店铺所属行业"
            android:textSize="14sp"
            android:textColor="@color/hint_color"
            android:drawableRight="@drawable/right_arrows"
            android:gravity="center_vertical"/>

        <include layout="@layout/line"/>

        <EditText
            android:id="@+id/et_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:hint="请输入入驻人名称"
            android:paddingBottom="12dp"
            android:paddingTop="12dp"
            android:textColor="@color/hint_color"
            android:textColorHint="@color/hint_color"
            android:textSize="14sp" />

        <include layout="@layout/line"/>

        <EditText
            android:id="@+id/et_phone"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请输入入驻人电话"
            android:textColorHint="@color/hint_color"
            android:textSize="14sp"
            android:textColor="@color/hint_color"
            android:background="@null"
            android:inputType="number"
            android:maxLength="11"/>

        <include layout="@layout/line"/>

        <LinearLayout
            android:layout_marginTop="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="124dp">

                    <RelativeLayout
                        android:visibility="invisible"
                        android:id="@+id/rl_ID_front"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <ImageView
                            android:id="@+id/iv_ID_front"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"/>
                        <ImageView
                            android:id="@+id/iv_delete_ID_front"
                            android:layout_alignParentRight="true"
                            android:layout_margin="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_delete"/>
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rl_upload_ID_front"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/round_corner_gray">

                        <TextView
                            android:layout_centerInParent="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="点击上传"
                            android:textSize="14sp"
                            android:textColor="@color/hint_color"
                            android:drawableTop="@drawable/ic_uploadbig"
                            android:drawablePadding="@dimen/margin"/>
                    </RelativeLayout>

                </FrameLayout>

                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="身份证正面"
                    android:textSize="15sp"
                    android:textColor="@color/text_color"/>


            </LinearLayout>

            <View
                android:layout_width="15dp"
                android:layout_height="match_parent"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="124dp">

                    <RelativeLayout
                        android:visibility="invisible"
                        android:id="@+id/rl_ID_back"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <ImageView
                            android:id="@+id/iv_ID_back"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"/>
                        <ImageView
                            android:id="@+id/iv_delete_ID_back"
                            android:layout_alignParentRight="true"
                            android:layout_margin="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_delete"/>
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rl_upload_ID_back"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/round_corner_gray">

                        <TextView
                            android:layout_centerInParent="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="点击上传"
                            android:textSize="14sp"
                            android:textColor="@color/hint_color"
                            android:drawableTop="@drawable/ic_uploadbig"
                            android:drawablePadding="@dimen/margin"/>
                    </RelativeLayout>

                </FrameLayout>

                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="身份证背面"
                    android:textSize="15sp"
                    android:textColor="@color/text_color"/>


            </LinearLayout>

        </LinearLayout>

        <FrameLayout
            android:layout_marginTop="12dp"
            android:layout_width="match_parent"
            android:layout_height="194dp">

            <RelativeLayout
                android:visibility="invisible"
                android:id="@+id/rl_license"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/iv_license"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"/>
                <ImageView
                    android:id="@+id/iv_delete_license"
                    android:layout_alignParentRight="true"
                    android:layout_margin="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_delete"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_upload_license"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/round_corner_gray">

                <TextView
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="点击上传"
                    android:textSize="14sp"
                    android:textColor="@color/hint_color"
                    android:drawableTop="@drawable/ic_uploadbig"
                    android:drawablePadding="@dimen/margin"/>
            </RelativeLayout>

        </FrameLayout>

        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="营业执照（非必填）"
            android:textSize="15sp"
            android:textColor="@color/text_color"/>

        <TextView
            android:id="@+id/tv_commit"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:layout_width="match_parent"
            android:layout_height="37dp"
            android:text="提交审核"
            android:textSize="16sp"
            android:textColor="#fff"
            android:background="@drawable/round_corner_red"
            android:gravity="center"/>
    </LinearLayout>
</ScrollView>
