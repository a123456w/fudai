<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:paddingLeft="@dimen/margin"
    android:paddingRight="@dimen/margin">

    <ImageView
        android:layout_marginTop="30dp"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:src="@mipmap/ic_launcher"/>

    <LinearLayout
        android:paddingLeft="@dimen/margin"
        android:paddingRight="@dimen/margin"
        android:layout_marginTop="25dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@drawable/border_gray">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_phone"/>

        <com.qlzx.mylibrary.widget.EditTextClearAble
            android:layout_marginLeft="7dp"
            android:id="@+id/et_phone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:drawableRight="@drawable/ic_delete_red"
            android:gravity="start|center_vertical"
            android:hint="请输入手机号或邮箱"
            android:textColorHint="@color/hint_color"
            android:imeOptions="actionNext"
            android:singleLine="true"
            android:textColor="@color/text_color"
            android:digits="@string/account_rule"
            android:textSize="13sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">
        <LinearLayout
            android:paddingLeft="@dimen/margin"
            android:paddingRight="@dimen/margin"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@drawable/border_gray">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_verification_code"/>

            <com.qlzx.mylibrary.widget.EditTextClearAble
                android:layout_marginLeft="7dp"
                android:id="@+id/et_verification_code"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:drawableRight="@drawable/ic_delete_red"
                android:gravity="start|center_vertical"
                android:hint="请输入验证码"
                android:textColorHint="@color/hint_color"
                android:imeOptions="actionNext"
                android:inputType="number"
                android:maxLength="6"
                android:singleLine="true"
                android:textColor="@color/text_color"
                android:textSize="13sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_verification_code"
            android:layout_marginLeft="12dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="获取验证码"
            android:textSize="13sp"
            android:textColor="@color/text_color"
            android:gravity="center"
            android:background="@drawable/round_corner_gray"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_area"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical"
        android:paddingLeft="12dp"
        android:background="@drawable/shape_stroke_grey"
        android:paddingRight="12dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/locationsss"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="地址"
            android:layout_marginLeft="5dp"
            android:textColor="@color/hint_color"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_area"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_weight="1"
            android:gravity="end"
            android:textColor="#666"
            android:textSize="14sp"
            android:hint="点我选择注册区域"
           />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/right_arrow_gray" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/border_gray"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/margin"
        android:paddingRight="@dimen/margin">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_phone" />

        <com.qlzx.mylibrary.widget.EditTextClearAble
            android:id="@+id/et_recommend_phone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="7dp"
            android:background="@null"
            android:drawableRight="@drawable/ic_delete_red"
            android:gravity="start|center_vertical"
            android:hint="请输入推荐人手机号或邮箱（选填）"
            android:imeOptions="actionNext"
            android:singleLine="true"
            android:digits="@string/account_rule"
            android:textColor="@color/text_color"
            android:textColorHint="@color/hint_color"
            android:textSize="13sp" />
    </LinearLayout>

    <LinearLayout
        android:paddingLeft="@dimen/margin"
        android:paddingRight="@dimen/margin"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@drawable/border_gray">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_pw"/>

        <com.qlzx.mylibrary.widget.EditTextClearAble
            android:layout_marginLeft="7dp"
            android:id="@+id/et_pw"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:digits="@string/account_rule"
            android:drawableRight="@drawable/ic_delete_red"
            android:gravity="start|center_vertical"
            android:hint="请输入密码"
            android:textColorHint="@color/hint_color"
            android:imeOptions="actionNext"
            android:inputType="textPassword"
            android:maxLength="16"
            android:singleLine="true"
            android:textColor="@color/text_color"
            android:textSize="13sp" />
    </LinearLayout>

    <LinearLayout
        android:paddingLeft="@dimen/margin"
        android:paddingRight="@dimen/margin"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@drawable/border_gray">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_pw"/>

        <com.qlzx.mylibrary.widget.EditTextClearAble
            android:layout_marginLeft="7dp"
            android:id="@+id/et_confirm_pw"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:digits="@string/account_rule"
            android:drawableRight="@drawable/ic_delete_red"
            android:gravity="start|center_vertical"
            android:hint="请确认密码"
            android:textColorHint="@color/hint_color"
            android:imeOptions="actionGo"
            android:inputType="textPassword"
            android:maxLength="16"
            android:singleLine="true"
            android:textColor="@color/text_color"
            android:textSize="13sp" />
    </LinearLayout>


    <TextView
        android:id="@+id/tv_register"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="37dp"
        android:text="注册"
        android:textSize="16sp"
        android:textColor="#fff"
        android:background="@drawable/round_corner_green"
        android:gravity="center"/>

    <RelativeLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="注册即表示您同意"
            android:textSize="13sp"
            android:textColor="@color/text_color"/>

        <TextView
            android:layout_toRightOf="@+id/tv"
            android:id="@+id/tv_agreement"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:text="《用户协议》"
            android:textColor="#1488EA"/>

        <TextView
            android:id="@+id/tv_login"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="登录"
            android:textSize="13sp"
            android:textColor="@color/text_color"
            android:drawableRight="@drawable/ic_go"
            android:drawablePadding="5dp"
            android:gravity="center_vertical"/>

    </RelativeLayout>
</LinearLayout>