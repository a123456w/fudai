                        android:text="预约记录"
                        android:textColor="@color/nwb_personal_setup_textcolor6"
                        android:textSize="@dimen/textSize13" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/wode_shoucang"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/mine_fragment_item_bg"

                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="27dp"
                        android:layout_height="27dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="12dp"
                        android:background="@drawable/wodeshoucang" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginBottom="12dp"
                        android:layout_marginTop="6dp"

                        android:text="我的收藏"
                        android:textColor="@color/nwb_personal_setup_textcolor6"
                        android:textSize="@dimen/textSize13" />
                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_3_row"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/ll_2_row"
