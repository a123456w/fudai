                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:layout_below="@id/iv_bg"
                android:background="@color/division_color" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/rl_comp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/mine_order_bg">

                <LinearLayout
                    android:id="@+id/ll_top_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/ll_techan_dingdan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="26dp"
                            android:layout_height="26dp"
                            android:layout_gravity="center"
                            android:layout_marginTop="7dp"
                            android:background="@drawable/specialty_order" />
                        <!--    android:textColor="color/nwb_personal_setup_textcolor6"-->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginBottom="7dp"
                            android:layout_marginTop="5dp"
                            android:text="特产订单"
                            android:textColor="@color/nwb_personal_setup_textcolor6"
                            android:textSize="@dimen/font_small" />
                    </LinearLayout>

                    <View
                        android:layout_width="1dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center_vertical"
                        android:background="@color/line_textd7d7d7"></View>

                    <LinearLayout
                        android:id="@+id/ll_yuding_dingdan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"

                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="26dp"
                            android:layout_height="26dp"
                            android:layout_gravity="center"
                            android:layout_marginTop="7dp"
                            android:background="@drawable/subscribe_order" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginBottom="7dp"
                            android:layout_marginTop="5dp"
                            android:text="预订订单"
                            android:textColor="@color/nwb_personal_setup_textcolor6"
                            android:textSize="@dimen/font_small" />
                    </LinearLayout>

                    <View
                        android:layout_width="1dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center_vertical"
                        android:background="@color/line_textd7d7d7"></View>

                    <LinearLayout
                        android:id="@+id/ll_shangcheng_dingdan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"

                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="26dp"
                            android:layout_height="26dp"
                            android:layout_gravity="center"
                            android:layout_marginTop="7dp"
                            android:background="@drawable/shopping_order" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginBottom="7dp"
                            android:layout_marginTop="5dp"
                            android:text="商城订单"
                            android:textColor="@color/nwb_personal_setup_textcolor6"
                            android:textSize="@dimen/font_small" />
                    </LinearLayout>

                    <View
                        android:layout_width="1dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center_vertical"
                        android:background="@color/line_textd7d7d7"></View>

                    <LinearLayout
                        android:id="@+id/ll_fudai_dingdan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="26dp"
                            android:layout_height="26dp"
                            android:layout_gravity="center"
                            android:layout_marginTop="7dp"
                            android:background="@drawable/luckybag_order" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginBottom="7dp"
                            android:layout_marginTop="5dp"
                            android:text="待返金订单"
                            android:textColor="@color/nwb_personal_setup_textcolor6"
                            android:textSize="@dimen/font_small" />
                    </LinearLayout>

                </LinearLayout>

                <View
                    android:id="@+id/v_middle_line"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@id/ll_top_layout"
                    android:layout_gravity="center_vertical"
                    android:background="@color/line_textd7d7d7"></View>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/v_middle_line"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/ll_keyong_yue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_mymoney"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="3dp"
                            android:text="-"
                            android:textColor="#dd0f1b"
                            android:textSize="@dimen/textSize15" />


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginBottom="8dp"
                            android:text="可用余额"
                            android:textColor="@color/nwb_personal_setup_textcolor6"
                            android:textSize="@dimen/font_small" />
                    </LinearLayout>

                    <View
                        android:layout_width="1dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center_vertical"
                        android:background="@color/line_textd7d7d7"></View>

                    <LinearLayout
                        android:id="@+id/ll_zuori_shouhuo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"

                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_yestedaymoney"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="3dp"
                            android:text="-"
                            android:textColor="#dd0f1b"
                            android:textSize="@dimen/textSize15" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginBottom="8dp"
                            android:text="昨日返还"
                            android:textColor="@color/nwb_personal_setup_textcolor6"
                            android:textSize="@dimen/font_small" />
                    </LinearLayout>


                </LinearLayout>

            </RelativeLayout>

            <LinearLayout


                android:id="@+id/ll_1_row"
                android:layout_width="match_parent"
