                        android:textSize="@dimen/textSize13" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ll_wode_chuzhi"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/mine_fragment_item_bg"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="27dp"
                        android:layout_height="27dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="12dp"
                        android:background="@drawable/wodechuzhi"
                        android:scaleType="fitXY" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginBottom="12dp"
                        android:layout_marginTop="6dp"
                        android:text="我的储值"
                        android:textColor="@color/nwb_personal_setup_textcolor6"
                        android:textSize="@dimen/textSize13"

                        />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ll_xiaoxi_jilu"
                    android:layout_width="0dp"

                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/mine_fragment_item_bg"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="27dp"
                        android:layout_height="27dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="12dp"
                        android:background="@drawable/xiaofeijilu"
                        android:scaleType="fitXY" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginBottom="12dp"
                        android:layout_marginTop="6dp"
                        android:text="消费记录"
                        android:textColor="@color/nwb_personal_setup_textcolor6"
                        android:textSize="@dimen/textSize13" />
                </LinearLayout>



            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_2_row"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/ll_1_row"
                android:orientation="horizontal">





                <LinearLayout
                    android:id="@+id/ll_wode_fudai"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/mine_fragment_item_bg"

                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="27dp"
                        android:layout_height="27dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="12dp"
                        android:background="@drawable/wodefudai" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginBottom="12dp"
                        android:layout_marginTop="6dp"
                        android:text="待返消费额"
                        android:textColor="@color/nwb_personal_setup_textcolor6"
                        android:textSize="@dimen/textSize13" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_wode_qianbao"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/mine_fragment_item_bg"

                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="27dp"
                        android:layout_height="27dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="12dp"
                        android:background="@drawable/wodeqianbao" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginBottom="12dp"
                        android:layout_marginTop="6dp"

                        android:text="我的钱包"
                        android:textColor="@color/nwb_personal_setup_textcolor6"
                        android:textSize="@dimen/textSize13" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ll_kanfang_jilu"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/mine_fragment_item_bg"

                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="27dp"
                        android:layout_height="27dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="12dp"
                        android:background="@drawable/kanfangjilu" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginBottom="12dp"
