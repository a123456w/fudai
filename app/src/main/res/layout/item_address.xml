<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/gray"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/address_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="11dp"
                android:layout_marginTop="15dp"
                android:text="张娇1231231231231231231231"
                android:layout_weight="1"
                android:lines="1"
                android:ellipsize="end"
                android:textColor="@color/textcolor3"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/address_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginRight="16dp"
                android:layout_marginTop="15dp"
                android:text="131231231"
                android:textColor="@color/textcolor3"
                android:textSize="15sp" />
        </LinearLayout>


        <TextView
            android:id="@+id/address_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="11dp"
            android:layout_marginTop="43dp"
            android:ellipsize="end"
            android:maxLines="5"
            android:text="北京市海淀区青龙桥街道厢红旗董事小区3号楼"
            android:textColor="@color/textcolor3"
            android:textSize="14sp" />

        <View
            android:layout_above="@+id/tv_address_default"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/gray" />

        <TextView
            android:id="@+id/tv_address_default"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/address_content"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"
            android:drawableLeft="@drawable/check"
            android:drawablePadding="5dp"
            android:gravity="center"
            android:text="默认地址"
            android:textColor="@color/textcolor6"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/tv_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/tv_address_default"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/address_content"
            android:layout_marginRight="15dp"
            android:layout_marginTop="20dp"
            android:drawableLeft="@drawable/image_delete"
            android:drawablePadding="5dp"
            android:gravity="center"
            android:text="删除"
            android:textColor="@color/textcolor6"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/tv_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/tv_address_default"
            android:layout_marginRight="13dp"
            android:layout_marginTop="20dp"
            android:layout_toLeftOf="@id/tv_delete"
            android:drawableLeft="@drawable/image_edit"
            android:drawablePadding="5dp"
            android:gravity="center"
            android:text="编辑"
            android:textColor="@color/textcolor6"
            android:textSize="12dp" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="7dp"
        android:background="@color/gray" />

</LinearLayout>