<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_pic"
            android:layout_width="106dp"
            android:layout_height="80dp"
            android:layout_marginLeft="@dimen/textmarginleft"
            android:layout_marginTop="@dimen/textmarginleft"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/spacing_small"
            android:layout_marginTop="@dimen/textmarginleft"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:textColor="@color/text_color3"
                android:textSize="@dimen/font_normal"
                tools:text="汉阴自强地产-金海岸fdsafdfdsafsdfadsfdsa" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <RatingBar
                    android:id="@+id/rb_grade"
                    style="@android:style/Widget.RatingBar"
                    android:layout_width="wrap_content"
                    android:layout_height="13dp"
                    android:isIndicator="true"
                    android:numStars="5"
                    android:progressDrawable="@drawable/ratingbar_drawable"
                    android:stepSize="0.1"
                    />
                <TextView
                    android:id="@+id/tv_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:textSize="12sp"
                    android:textColor="@color/stateColor"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:gravity="center_vertical"
                    android:id="@+id/tv_address"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:textColor="@color/text_color6"
                    android:textSize="13sp"
                    tools:text="安康市汉滨区" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:paddingBottom="5dp"
                android:visibility="gone"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_flag1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/notes_text"
                    android:padding="3dp"
                    android:textColor="#90C42F"
                    android:textSize="10sp"
                    android:text="味道好"/>

                <TextView
                    android:id="@+id/tv_flag2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/notes_text"
                    android:padding="3dp"
                    android:text="味道好"
                    android:textColor="#90C42F"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/tv_flag3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/notes_text"
                    android:padding="3dp"
                    android:textColor="#90C42F"
                    android:textSize="10sp"
                    android:layout_marginLeft="10dp"
                    android:text="味道好"/>
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="1111"
            android:gravity="bottom"
            android:textSize="13sp"
            android:textColor="@color/colorAccent"
            android:layout_marginBottom="20dp"/>
    </LinearLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/ry_recy"
        android:layout_width="match_parent"
        android:visibility="gone"
        android:layout_height="wrap_content"></android.support.v7.widget.RecyclerView>
</LinearLayout>