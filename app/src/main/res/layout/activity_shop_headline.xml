<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    android:orientation="vertical">

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/can_content_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="49dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.youth.banner.Banner
                android:id="@+id/banner_top"
                android:layout_width="match_parent"
                android:layout_height="210dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <com.ruirong.chefang.widget.MarqueTextView
                    android:id="@+id/tv_table_name"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="@dimen/detailCommonMargin"
                    android:drawableLeft="@drawable/laba"
                    android:drawablePadding="5dp"
                    android:ellipsize="marquee"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:gravity="center_vertical"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:singleLine="true"
                    android:text="总统套房一律五折，先到先得总统套房一律五折，先到先得总统套房一律五折，先到先得"
                    android:textStyle="bold" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_preview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="6dp"
                    android:text="人预览"
                    android:textColor="@color/text_color6"
                    android:textSize="@dimen/font_small" />

                <TextView
                    android:id="@+id/tv_preview_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:layout_toLeftOf="@id/tv_preview"
                    android:text="19999"
                    android:textColor="@color/text_color6"
                    android:textSize="@dimen/font_small" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="14dp"
                    android:layout_alignBottom="@id/tv_preview_num"
                    android:layout_marginRight="5dp"
                    android:layout_toLeftOf="@id/tv_preview_num"
                    android:src="@drawable/image_yanjing" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_small"
                android:layout_marginTop="@dimen/spacing_small">

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/spacing_small"
                    android:text="金华四季"
                    android:textColor="@color/text_color3"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/tv_score"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="5dp"
                    android:layout_toLeftOf="@+id/tv_scorenum"
                    android:drawableLeft="@drawable/ic_store"
                    android:drawablePadding="5dp"
                    android:text="4分" />

                <TextView
                    android:id="@+id/tv_scorenum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/spacing_large"
                    android:drawableLeft="@drawable/ic_message"
                    android:drawablePadding="5dp"
                    android:text="855条" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_workinggroup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/spacing_small"
                    android:drawableLeft="@drawable/ic_homestay"
                    android:drawablePadding="@dimen/spacing_small"
                    android:text="酒店住宿"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/tv_distance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/spacing_large"
                    android:drawablePadding="@dimen/drawablepadding"
                    android:drawableRight="@drawable/ic_locationred"
                    android:text="距离我2.6km"

                    />
            </RelativeLayout>

            <RelativeLayout
                android:visibility="gone"
                android:id="@+id/rl_all_product"
                android:layout_width="match_parent"
                android:layout_height="41dp">


                <TextView
                    android:id="@+id/tv_businessarea"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="32dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="15dp"
                    android:text="全部"
                    android:textColor="@color/textcolor9"
                    android:textSize="13sp" />

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/margin"
                    android:src="@drawable/fanhui" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="7dp"
                android:layout_alignParentBottom="true"
                android:background="#eeeeee" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                tools:text="预定"
                android:textSize="@dimen/textSize15"
                android:textColor="@color/textcolor3"
                android:drawableLeft="@drawable/image_taochan"
                android:gravity="center"
                android:drawablePadding="@dimen/dp10"
                />
            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_taochan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></android.support.v7.widget.RecyclerView>
            <RelativeLayout
                android:id="@+id/rl_more"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"
                    android:text="单品选项"
                    android:textSize="@dimen/textSize15"
                    android:textColor="@color/textcolor3"
                    android:drawableLeft="@drawable/image_danping"
                    android:gravity="center"
                    android:drawablePadding="@dimen/dp10"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"
                    android:text="查看更多"
                    android:layout_alignParentRight="true"
                    android:textSize="@dimen/textSize15"
                    android:textColor="@color/textcolor9"
                    android:drawableRight="@drawable/fanhui"
                    android:gravity="center"
                    android:drawablePadding="@dimen/dp10"
                    />
            </RelativeLayout>
            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_danping"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></android.support.v7.widget.RecyclerView>

            <!--<View-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="7dp"-->
            <!--android:layout_marginTop="@dimen/margin"-->
            <!--android:background="@color/gray" />-->

            <!--<com.qlzx.mylibrary.widget.NoScrollListView-->
            <!--android:id="@+id/list_product"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:numColumns="3"></com.qlzx.mylibrary.widget.NoScrollListView>-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="7dp"
                    android:background="@color/gray" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginBottom="15dp"
                    android:layout_marginLeft="@dimen/textmarginleft"
                    android:gravity="center"
                    android:text="用户评价（1588）"
                    android:textColor="@color/text_color3"
                    android:textSize="@dimen/font_normal" />

                <com.qlzx.mylibrary.widget.CircleBar
                    android:id="@+id/cb_evaluate"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_gravity="center"></com.qlzx.mylibrary.widget.CircleBar>


                <com.ruirong.chefang.widget.FlowLayout
                    android:id="@+id/fl_client_evaluation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:layout_marginTop="12dp"></com.ruirong.chefang.widget.FlowLayout>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="15dp"
                    android:background="@color/gray" />


            </LinearLayout>

            <com.qlzx.mylibrary.widget.NoScrollListView
                android:id="@+id/list_evaluate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:numColumns="3"></com.qlzx.mylibrary.widget.NoScrollListView>
        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_storemoney"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#e75252"
            android:gravity="center"
            android:text="我要储值"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <Button
            android:id="@+id/btn_paybill"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#dd0f1b"
            android:gravity="center"
            android:text="我要买单"
            android:textColor="@color/white"
            android:textSize="18sp" />
    </LinearLayout>
</RelativeLayout>