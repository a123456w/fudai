<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <android.support.v4.widget.NestedScrollView
        android:background="@color/division_color"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="156dp"
                android:background="@color/titleBarColor" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="78dp"
                android:background="@color/color_f6f6f6" />

            <include layout="@layout/line" />

            <LinearLayout
                android:background="@color/white"


                android:id="@+id/ll_1_row"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/ll_growbeans"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/mine_fragment_item_bg"

                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="27dp"
                        android:layout_height="27dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="16dp"
                        android:background="@drawable/ic_growpean"
                        android:scaleType="fitXY" />

                    <TextView
                        android:layout_width="52dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"

                        android:layout_marginBottom="18dp"
                        android:layout_marginTop="12dp"

                        android:text=" 种金豆"
                        android:textColor="@color/nwb_personal_setup_textcolor6"
                        android:textSize="@dimen/textSize13" />
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/ll_profit"
                    android:layout_width="0dp"

                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/mine_fragment_item_bg"

                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="27dp"
                        android:layout_height="27dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="16dp"
                        android:background="@drawable/ic_profit"
                        android:scaleType="fitXY" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"

                        android:layout_marginBottom="18dp"
                        android:layout_marginTop="12dp"
                        android:text="增长收益"
                        android:textColor="@color/nwb_personal_setup_textcolor6"
                        android:textSize="@dimen/textSize13" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_goldbeantrans"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/mine_fragment_item_bg"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="27dp"
                        android:layout_height="27dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="16dp"
                        android:background="@drawable/ic_goldbeantrans"
                        android:scaleType="fitXY" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginBottom="18dp"
                        android:layout_marginTop="12dp"
                        android:text="转账"
                        android:textColor="@color/nwb_personal_setup_textcolor6"
                        android:textSize="@dimen/textSize13"

                        />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_transformhis"
                    android:layout_width="0dp"

                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/mine_fragment_item_bg"

                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="27dp"
                        android:layout_height="27dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="16dp"
                        android:background="@drawable/ic_transformhis"
                        android:scaleType="fitXY" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginBottom="18dp"
                        android:layout_marginTop="12dp"
                        android:text="转账记录"
                        android:textColor="@color/nwb_personal_setup_textcolor6"
                        android:textSize="@dimen/textSize13" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:background="@color/white"

                android:id="@+id/ll_2_row"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/ll_1_row"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/ll_buybean"
                    android:layout_width="0dp"

                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/mine_fragment_item_bg"

                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="27dp"
                        android:layout_height="27dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="16dp"
                        android:background="@drawable/ic_buypean" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginBottom="18dp"
                        android:layout_marginTop="12dp"
                        android:text="充值"
                        android:textColor="@color/nwb_personal_setup_textcolor6"
                        android:textSize="@dimen/textSize13" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_buybeanhis"
                    android:layout_width="0dp"

                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/mine_fragment_item_bg"

                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="27dp"
                        android:layout_height="27dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="16dp"
                        android:background="@drawable/wodeqianbao" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginBottom="18dp"
                        android:layout_marginTop="12dp"
                        android:text="充值记录"
                        android:textColor="@color/nwb_personal_setup_textcolor6"
                        android:textSize="@dimen/textSize13" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_sellbeans"
                    android:layout_width="0dp"

                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/mine_fragment_item_bg"

                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="27dp"
                        android:layout_height="27dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="16dp"
                        android:background="@drawable/ic_sellpeans" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"

                        android:layout_marginBottom="18dp"
                        android:layout_marginTop="12dp"

                        android:text="提现"
                        android:textColor="@color/nwb_personal_setup_textcolor6"
                        android:textSize="@dimen/textSize13" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_sellbeanshis"
                    android:layout_width="0dp"

                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/mine_fragment_item_bg"

                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="27dp"
                        android:layout_height="27dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="16dp"
                        android:background="@drawable/ic_sellpeanhis" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginBottom="18dp"
                        android:layout_marginTop="12dp"
                        android:text="提现记录"
                        android:textColor="@color/nwb_personal_setup_textcolor6"
                        android:textSize="@dimen/textSize13" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:background="@color/white"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/ll_2_row"
                android:orientation="horizontal">

                <LinearLayout


                    android:id="@+id/ll_bankcard"
                    android:layout_width="0dp"

                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/mine_fragment_item_bg"

                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="27dp"
                        android:layout_height="27dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="16dp"
                        android:background="@drawable/ic_bankcard" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"

                        android:layout_marginBottom="18dp"
                        android:layout_marginTop="12dp"
                        android:text="银行卡"
                        android:textColor="@color/nwb_personal_setup_textcolor6"
                        android:textSize="@dimen/textSize13" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_paypwd"
                    android:layout_width="0dp"

                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/mine_fragment_item_bg"

                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="27dp"
                        android:layout_height="27dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="16dp"
                        android:background="@drawable/ic_paypwd" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"

                        android:layout_marginBottom="18dp"
                        android:layout_marginTop="12dp"

                        android:text="支付密码设置"
                        android:textColor="@color/nwb_personal_setup_textcolor6"
                        android:textSize="@dimen/textSize13" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"

                    android:layout_weight="1"
                    android:background="@drawable/mine_fragment_item_bg"
                    android:orientation="vertical"

                    >

                    <ImageView
                        android:layout_width="27dp"

                        android:layout_height="27dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="16dp"
                        android:background="@drawable/wodedizhi"
                        android:visibility="invisible" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"

                        android:layout_marginBottom="18dp"
                        android:layout_marginTop="12dp"
                        android:text="我的地址"

                        android:textColor="@color/nwb_personal_setup_textcolor6"
                        android:textSize="@dimen/textSize13"
                        android:visibility="invisible" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/mine_fragment_item_bg"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="27dp"
                        android:layout_height="27dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="16dp"
                        android:background="@drawable/wodedizhi"
                        android:visibility="invisible" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginBottom="18dp"

                        android:layout_marginTop="12dp"
                        android:text="我的地址"

                        android:textColor="@color/nwb_personal_setup_textcolor6"
                        android:textSize="@dimen/textSize13"
                        android:visibility="invisible" />
                </LinearLayout>
            </LinearLayout>


        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/spacing_large"
        android:layout_marginRight="@dimen/spacing_large"
        android:layout_marginTop="26dp"
        android:background="@drawable/round_corner_wightgray"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_allmoney"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center_horizontal"
            tools:text="187.38"
            android:textColor="@color/text_color3"
            android:textSize="30sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center_horizontal"
            android:text="总资产"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_goldsum"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:gravity="center_horizontal"
                    tools:text="187.38"
                    android:textColor="@color/text_color3"
                    android:textSize="25sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="5dp"
                    android:gravity="center_horizontal"
                    android:text="余额"
                    android:textSize="14sp" />

            </LinearLayout>

            <View
                android:layout_gravity="center"
                android:layout_width="1dp"
                android:layout_height="34dp"
                android:background="#cccccc"></View>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_silversum"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:gravity="center_horizontal"
                    tools:text="187.38"
                    android:textColor="@color/text_color3"
                    android:textSize="25sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="5dp"
                    android:gravity="center_horizontal"
                    android:text="消费额"
                    android:textSize="14sp" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>